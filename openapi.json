
{
  "openapi": "3.0.0",
  "info": {
    "title": "Apple Info API",
    "version": "1.0.0",
    "description": "An API that provides detailed information about different apple varieties."
  },
  "servers": [
    {
      "url": "https://api.appleinfo.com/v1"
    }
  ],
  "paths": {
    "/apples/granny-smith": {
      "get": {
        "summary": "Get information about Granny Smith apples",
        "description": "Provides details on Granny Smith apples, including their flavor, origin, and best uses.",
        "responses": {
          "200": {
            "description": "Granny Smith apple information",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "name": {
                      "type": "string",
                      "example": "Granny Smith"
                    },
                    "origin": {
                      "type": "string",
                      "example": "Australia"
                    },
                    "flavor": {
                      "type": "string",
                      "example": "Tart and crisp"
                    },
                    "bestUses": {
                      "type": "string",
                      "example": "Baking, salads, snacking"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/apples/honeycrisp": {
      "get": {
        "summary": "Get information about Honeycrisp apples",
        "description": "Provides details on Honeycrisp apples, including their flavor, origin, and best uses.",
