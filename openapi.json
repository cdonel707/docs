              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "name": {
                      "type": "string",
                      "example": "Honeycrisp"
                    },
                    "origin": {
                      "type": "string",
                      "example": "Minnesota, USA"
                    },
                    "flavor": {
                      "type": "string",
                      "example": "Sweet and crisp"
                    },
                    "bestUses": {
                      "type": "string",
                      "example": "Snacking, salads"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/apples/fuji": {
