            "description": "Fuji apple information",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "name": {
                      "type": "string",
                      "example": "Fuji"
                    },
                    "origin": {
                      "type": "string",
